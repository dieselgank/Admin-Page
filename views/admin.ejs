<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Toko</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        max-width: 1200px;
      }
      .card {
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">ðŸ›’ Admin Panel Toko</a>
      </div>
    </nav>

    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="card">
            <div class="card-header">
              <h5>Input Pembelian Baru</h5>
            </div>
            <div class="card-body">
              <form action="/pembelian" method="POST">
                <div class="mb-3">
                  <label for="produk_id" class="form-label">Pilih Produk</label>
                  <select
                    class="form-select"
                    id="produk_id"
                    name="produk_id"
                    required
                  >
                    <option value="" disabled selected>
                      -- Pilih Produk --
                    </option>
                    <% produk.forEach(p => { %>
                    <option value="<%= p.id %>">
                      <%= p.nama_produk %> (Stok: <%= p.jumlah_stock %>)
                    </option>
                    <% }) %>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="jumlah" class="form-label">Jumlah</label>
                  <input
                    type="number"
                    class="form-control"
                    id="jumlah"
                    name="jumlah"
                    min="1"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-primary w-100">
                  Tambah Pembelian
                </button>
              </form>
            </div>
          </div>
        </div>

        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h5>Riwayat Pembelian</h5>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>Tanggal</th>
                      <th>Nama Produk</th>
                      <th>Jumlah</th>
                      <th>Total Harga</th>
                      <th>Status</th>
                      <th>Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% pembelian.forEach(p => { %>
                    <tr>
                      <td><%= p.tanggal %></td>
                      <td><%= p.nama_produk %></td>
                      <td><%= p.jumlah %></td>
                      <td>Rp <%= p.total_harga.toLocaleString('id-ID') %></td>
                      <td>
                        <span
                          class="badge <%= p.status === 'BERHASIL' ? 'bg-success' : 'bg-danger' %>"
                        >
                          <%= p.status %>
                        </span>
                      </td>
                      <td>
                        <% if (p.status === 'BERHASIL') { %>
                        <form
                          action="/pembelian/cancel/<%= p.id %>"
                          method="POST"
                          onsubmit="return confirm('Anda yakin ingin membatalkan pembelian ini?');"
                        >
                          <button type="submit" class="btn btn-danger btn-sm">
                            Batalkan
                          </button>
                        </form>
                        <% } %>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
